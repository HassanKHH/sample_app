<% provide :title,"User Index" %>
<h1>User Index</h1>
<%= will_paginate %> 
<ul class="users">
    <% @users.each do |user| %>
        <li><%= link_to user.name,user %></li>
        <% if current_user.admin? && user != current_user %>
            <%= link_to "destroy",user, method: :delete, 
            data: {confirm: "Are you sure you want to destroy this user? This action cannot be undone."} %>
        <% end %>
    <% end %>
</ul>
<%= will_paginate %> 